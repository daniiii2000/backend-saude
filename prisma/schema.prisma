generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Paciente {
  id             String   @id @default(uuid())
  nome           String
  email          String   @unique
  senha          String
  cpf            String
  sexo           String
  telefone       String
  tipo           String
  tipoSanguineo  String?
  alergias       String?
  doencas        String?
  cirurgias      String?
  criadoEm       DateTime @default(now())
}

model Profissional {
  id             String   @id @default(uuid())
  nome           String
  email          String   @unique
  senha          String
  cpf            String
  sexo           String
  telefone       String
  tipo           String
  profissao      String
  tipoSanguineo  String?
  alergias       String?
  doencas        String?
  cirurgias      String?
  criadoEm       DateTime @default(now())
}

