generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paciente {
  id                       String    @id @default(uuid())
  nome                     String
  email                    String    @unique
  senha                    String
  cpf                      String
  sexo                     String
  telefone                 String
  tipo                     String
  tipoSanguineo            String?
  alergias                 String?
  doencas                  String?
  cirurgias                String?
  planoDeSaude             String?   // Nuevo campo
  hospitalPreferido        String?   // Nuevo campo
  emergencyContactPhone    String    // Teléfono de contacto de un tercero
  biometricEnabled         Boolean   @default(false) // Marca si activó FaceID/TouchID
  criadoEm                 DateTime  @default(now())
}

model Profissional {
  id                      String    @id @default(uuid())
  nome                    String
  email                   String    @unique
  senha                   String
  cpf                     String
  sexo                    String
  telefone                String
  tipo                    String
  profissao               String
  tipoSanguineo           String?
  alergias                String?
  doencas                 String?
  cirurgias               String?
  emergencyContactPhone   String
  biometricEnabled        Boolean   @default(false)
  criadoEm                DateTime  @default(now())
}
