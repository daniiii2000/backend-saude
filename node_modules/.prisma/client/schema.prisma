generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       String @id @default(uuid())
  nome     String
  email    String @unique
  senha    String
  cpf      String @unique
  sexo     String
  telefone String
  tipo     String
  perfil   String @default("padrao")

  paciente     Paciente?
  profissional Profissional?
}

model Paciente {
  id        String  @id @default(uuid())
  usuarioId String  @unique
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  doencas   String?
  alergias  String?
  cirurgias String?
}

model Profissional {
  id        String  @id @default(uuid())
  usuarioId String  @unique
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  profissao String
}
